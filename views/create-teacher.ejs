<%- include('partials/header.ejs') %>

<div class="container p-1">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-md">
        <div class="card-header bg-primary text-white">
          <h2 class="text-center">Create New Teacher</h2>
        </div>
        <div class="card-body">
          <% if (locals?.error) { %>
            <div class="alert alert-danger">
              <pre><%= locals?.error %></pre>
            </div>
          <% } %> 
          <form action="/teacher/create" method="POST">
            <div class="form-group mb-3">
              <label for="name">Enter Teacher Name</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" value="<%= locals?.name %>" required>
            </div>
            <div class="form-group mb-3">
              <label for="email">Enter Teacher Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required value="<%= locals?.email %>">
            </div>
            <div class="form-group mb-3">
              <label for="password">Enter Teacher Password</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="Password" required value="<%= locals?.email %>">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Create Teacher</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>
